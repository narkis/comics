<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView
        android:layout_width="110dp"
        android:layout_height="130dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        app:cardCornerRadius="2dp"
        android:elevation="2dp">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey">
        <com.narunas.comics.ui.common.BaseImageView
                android:id="@+id/thumb_image"
                android:layout_width="match_parent"
                android:layout_height="106dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/thumb_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
        <TextView
                android:id="@+id/thumb_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="12sp"
                android:textColor="@color/off_white"
                app:layout_constraintTop_toBottomOf="@+id/thumb_image"
                app:layout_constraintBottom_toBottomOf="@+id/thumb_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
    </android.support.constraint.ConstraintLayout>

</android.support.design.card.MaterialCardView>


